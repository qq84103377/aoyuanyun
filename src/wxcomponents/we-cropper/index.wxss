.cropper-wrapper {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background-color: #202020;
  display: flex;
  align-items: center;
}
.cropper-buttons {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  margin: 10px;
}
.cropper-buttons .btn {
  height: 30px;
  line-height: 30px;
  padding: 0 24rpx;
  border-radius: 2px;
  color: #ffffff;
}
.cropper-buttons .getCropperImage {
  background-color: #04b00f;
}